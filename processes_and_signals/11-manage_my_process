#!/usr/bin/env bash
# 11-manage_my_process
# This script manages the manage_my_process script.
# Usage: manage_my_process {start|stop|restart}

MANAGE_MY_PROCESS_SCRIPT="$(dirname "$0")/manage_my_process"
PIDFILE="/var/run/my_process.pid"

case "$1" in
    start)
        nohup "$MANAGE_MY_PROCESS_SCRIPT" > /dev/null 2>&1 &
        echo $! > "$PIDFILE"
        echo "manage_my_process started"
        ;;
    stop)
        if [ -f "$PIDFILE" ]; then
            PID=$(cat "$PIDFILE")
            kill "$PID" 2>/dev/null
            rm -f "$PIDFILE"
        fi
        echo "manage_my_process stopped"
        ;;
    restart)
        if [ -f "$PIDFILE" ]; then
            PID=$(cat "$PIDFILE")
            kill "$PID" 2>/dev/null
            rm -f "$PIDFILE"
        fi
        nohup "$MANAGE_MY_PROCESS_SCRIPT" > /dev/null 2>&1 &
        echo $! > "$PIDFILE"
        echo "manage_my_process restarted"
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        exit 1
        ;;
esac
